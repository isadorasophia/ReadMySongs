<Window x:Class="AsyncSongs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncSongs"
        mc:Ignorable="d"
        Title="My Song Finder" Height="300" Width="500">
    <StackPanel Orientation="Vertical">

        <Label Name="userLabel" HorizontalAlignment="Right" Margin="10,2">
            Not logged in
        </Label>
        
        <Label Content="My Song Finder" HorizontalAlignment="Center" FontSize="30"></Label>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox x:Name="playlistTextBox" Text="Playlist name goes here..." Padding="3" Margin="0,4" GotFocus="playlistTextBox_GotFocus" LostFocus="playlistTextBox_LostFocus"></TextBox>
            <TextBox x:Name="lyricsTextBox" Text="Lyrics go here..." Padding="3" GotFocus="lyricsTextBox_GotFocus" LostFocus="lyricsTextBox_LostFocus"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="loginButton" Content="Login" Click="loginButton_Click" HorizontalAlignment="Left" Margin="10,5" Padding="3"></Button>
                <Button x:Name="searchButton" Content="Search" Click="searchButton_Click" HorizontalAlignment="Right" Padding="3" Margin="0,5"></Button>
            </StackPanel>
        </StackPanel>

        <Label Name="songLabel" Content="Song Name:" Margin="5"></Label>

        <ProgressBar x:Name="searchProgressBar" IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Margin="0,10,0,0" Height="5"></ProgressBar>
        <Label Name="progressLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Looking up song..." Margin="0,0,0,5"></Label>
    </StackPanel>
</Window>
