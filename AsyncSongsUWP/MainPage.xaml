<Page
    x:Class="AsyncSongsUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AsyncSongsUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="300"
    Width="500">

    <StackPanel Orientation="Vertical">

        <TextBlock Name="userLabel" HorizontalAlignment="Right" Margin="10,2">
            Not logged in
        </TextBlock>

        <TextBlock HorizontalAlignment="Center" FontSize="30">
            My Song Finder
        </TextBlock>

        <StackPanel Orientation="Vertical" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Margin="0,3">Playlist: </TextBlock>
                <TextBox Grid.Column="1" x:Name="playlistTextBox" FontStyle="Italic" Text="Playlist name goes here..." Padding="3" Margin="0,4" GotFocus="playlistTextBox_GotFocus" LostFocus="playlistTextBox_LostFocus" ></TextBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,3">Lyrics: </TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="lyricsTextBox" FontStyle="Italic"  Text="Lyrics go here..." Padding="3" GotFocus="lyricsTextBox_GotFocus" Margin="0,4" LostFocus="lyricsTextBox_LostFocus" HorizontalAlignment="Stretch"></TextBox>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="loginButton" Content="Login" Click="loginButton_Click" HorizontalAlignment="Left" Margin="10,5" Padding="3"></Button>
                <Button x:Name="searchButton" Content="Search" Click="searchButton_Click" HorizontalAlignment="Right" Padding="3" Margin="0,5"></Button>
            </StackPanel>
        </StackPanel>

        <TextBlock Name="songLabel" Margin="10,0">Song Name: </TextBlock>

        <ProgressBar x:Name="searchProgressBar" IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Margin="0,10,0,0" Height="5"></ProgressBar>
        <TextBlock Name="progressLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">Looking up song...</TextBlock>
    </StackPanel>
</Page>
